<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGray"
    android:orientation="vertical"
    tools:context=".UserPages.UserBrowseCategory">

    <LinearLayout
        android:id="@+id/user_browse_category_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_browse_category_tabs" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/White"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_browse_category_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_browse_category_search"
        app:layout_constraintBottom_toTopOf="@id/user_browse_category_options" >

        <Button
            android:id="@+id/browse_category_tab"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/interactive_button_selected_gold"
            android:text="@string/category"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/browse_price_tab"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/interactive_button_light_gold"
            android:onClick="selectPrice"
            android:text="@string/price"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/browse_popular_tab"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/interactive_button_light_gold"
            android:onClick="selectPopular"
            android:text="@string/popular"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/user_browse_category_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/user_browse_category_results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_browse_category_tabs">

        <LinearLayout
            android:id="@+id/user_browse_category_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LightGray"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/user_category_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Bar"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Restaurant"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Venue"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Entertainment"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Modern"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Traditional"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Indoor"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Outdoor"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="International"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/user_category_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/interactive_button_light_gold"
                android:text="Finnish"
                android:fontFamily="monospace"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </HorizontalScrollView>

    <ListView
        android:id="@+id/user_browse_category_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/user_browse_category_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_browse_category_options">
    </ListView>

    <LinearLayout
        android:id="@+id/user_browse_category_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/user_browse_category_results"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/user_browse_page"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/browse_icon_white"
            android:onClick="selectBrowse"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/browse"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/user_profile_page"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/my_profile_icon_white"
            android:onClick="selectProfile"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/user_profile"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/user_favorites_page"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/favorites_icon_white"
            android:onClick="selectFavorites"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/my_favorites"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/user_bookings_page"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/bookings_icon_white"
            android:onClick="selectBookings"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/user_bookings"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
