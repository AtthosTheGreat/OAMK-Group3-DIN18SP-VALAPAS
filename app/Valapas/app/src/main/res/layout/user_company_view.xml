<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGray"
    tools:context=".UserPages.UserCompanyView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/LightGray"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintTop_toBottomOf="@+id/companyLocation"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offeringName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/offeringsListView"
                app:layout_constraintTop_toBottomOf="@+id/company_description">

                <ImageButton
                    android:id="@+id/favoriteButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/interactive_button_light_gold"
                    android:onClick="favoriteButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_favorite_black_24dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Offers:"
                    android:textAlignment="textStart"
                    android:textColor="@color/White"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/company_weekday_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:paddingTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:text="MON – FRI"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_hours"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_weekday_hours_open"/>

            <TextView
                android:id="@+id/company_weekday_hours_open"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_weekend_title"/>

            <TextView
                android:id="@+id/company_weekend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:paddingTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:text="SAT – SUN"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekday_hours_open"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/DefaultBackground" />

            <TextView
                android:id="@+id/company_weekend_hours_open"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="60dp"
                android:paddingTop="20dp"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                android:paddingBottom="40dp"
                android:text="0900"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekend_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/company_weekend_hours_close"
                app:layout_constraintBottom_toTopOf="@id/company_description"/>

            <TextView
                android:id="@+id/company_weekend_hours_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="60dp"
                android:paddingTop="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="40dp"
                android:paddingBottom="40dp"
                android:text="2300"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekend_title"
                app:layout_constraintStart_toEndOf="@id/company_weekend_hours_open"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_description"/>

            <TextView
                android:id="@+id/company_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:paddingBottom="60dp"
                android:background="@color/DarkGray"
                android:text="Company description"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="italic"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekend_hours_open"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/offerings_title"/>

            <TextView
                android:id="@+id/offerings_title"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="@color/LightGold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat"
                android:text="O f f e r s"
                app:layout_constraintTop_toBottomOf="@id/company_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/favoriteButton"
                app:layout_constraintBottom_toTopOf="@id/offeringsListView"/>

            <Button
                android:id="@+id/favoriteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/interactive_button_selected_gold"
                android:paddingTop="20dp"
                android:paddingEnd="60dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/company_description"
                app:layout_constraintStart_toEndOf="@id/offerings_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/offeringsListView"/>

            <ListView
                android:id="@+id/offeringsListView"
                android:layout_width="match_parent"
                android:layout_height="5000dp"
                android:background="@color/White"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:id="@+id/offeringName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Company Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/companyLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="3141 Address, Oulu 90130"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offeringName" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/homeButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/browse_icon_gold"
            android:onClick="selectBrowse"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/browse"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/SelectedGold"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/updateInfoButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/my_profile_icon_white"
            android:onClick="selectProfile"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/user_profile"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/favorites"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/favorites_icon_white"
            android:onClick="selectFavorites"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/my_favorites"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/bookingButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkGray"
            android:drawableTop="@drawable/bookings_icon_white"
            android:onClick="selectBookings"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/user_bookings"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="9sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:fontFamily="@font/montserrat"
            tools:ignore="SmallSp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>