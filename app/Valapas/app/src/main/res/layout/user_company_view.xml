<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPages.UserCompanyView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offeringName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:paddingBottom="10dp"
                android:background="@color/DarkGray"
                android:text="Company Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/companyLocation"/>

            <TextView
                android:id="@+id/companyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:paddingBottom="20dp"
                android:background="@color/DarkGray"
                android:text="3141 Address, Oulu 90130"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="italic"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/offeringName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_hours"/>

            <TextView
                android:id="@+id/company_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginTop="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:paddingTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:text="Hours"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/companyLocation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_weekday_title"/>

            <TextView
                android:id="@+id/company_weekday_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:paddingTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:text="MON – FRI"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_hours"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_weekday_hours_open"/>

            <TextView
                android:id="@+id/company_weekday_hours_open"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginStart="60dp"
                android:paddingTop="20dp"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:text="0630"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekday_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/company_weekday_hours_close"
                app:layout_constraintBottom_toTopOf="@id/company_weekend_title"/>

            <TextView
                android:id="@+id/company_weekday_hours_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginEnd="60dp"
                android:paddingTop="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="40dp"
                android:paddingBottom="20dp"
                android:text="2100"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekday_title"
                app:layout_constraintStart_toEndOf="@id/company_weekday_hours_open"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_weekend_title"/>

            <TextView
                android:id="@+id/company_weekend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:paddingTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:text="SAT – SUN"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekday_hours_open"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_weekend_hours_open"/>

            <TextView
                android:id="@+id/company_weekend_hours_open"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="60dp"
                android:paddingTop="20dp"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                android:paddingBottom="40dp"
                android:text="0900"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekend_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/company_weekend_hours_close"
                app:layout_constraintBottom_toTopOf="@id/company_description"/>

            <TextView
                android:id="@+id/company_weekend_hours_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="60dp"
                android:paddingTop="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="40dp"
                android:paddingBottom="40dp"
                android:text="2300"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekend_title"
                app:layout_constraintStart_toEndOf="@id/company_weekend_hours_open"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/company_description"/>

            <TextView
                android:id="@+id/company_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:paddingBottom="60dp"
                android:background="@color/DarkGray"
                android:text="Company description"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="italic"
                app:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@id/company_weekend_hours_open"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/offerings_title"/>

            <TextView
                android:id="@+id/offerings_title"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="@color/LightGold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat"
                android:text="O f f e r s"
                app:layout_constraintTop_toBottomOf="@id/company_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/favoriteButton"
                app:layout_constraintBottom_toTopOf="@id/offeringsListView"/>

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/interactive_button_selected_gold"
                android:paddingTop="20dp"
                android:paddingEnd="60dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/company_description"
                app:layout_constraintStart_toEndOf="@id/offerings_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/offeringsListView"/>

            <ListView
                android:id="@+id/offeringsListView"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                app:layout_constraintTop_toBottomOf="@id/offerings_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>