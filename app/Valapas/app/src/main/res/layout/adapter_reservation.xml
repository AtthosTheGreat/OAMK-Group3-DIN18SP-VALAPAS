<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightGold"
    android:gravity="top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxLength="40"
        android:text="Company Name"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/offeringName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:maxLength="40"
        android:text="Offering Name"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:textStyle="normal"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/offeringDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:lines="3"
        android:maxLines="3"
        android:text="Description"
        android:textSize="10sp"
        android:textColor="@color/Black"
        android:textStyle="italic"
        android:fontFamily="@font/montserrat"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DarkGray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/offeringPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:lines="1"
            android:text="10,00 EUR"
            android:textColor="@color/SelectedGold"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/reservationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="24/05/2020"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            android:textAlignment="textEnd"
            tools:ignore="SmallSp" />
    </LinearLayout>

</LinearLayout>